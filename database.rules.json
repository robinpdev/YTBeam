{
  "rules": {
		"rooms":{
      ".read": "auth != null",
      "$room":{
      	".read": "auth != null",
      	".write": "newData.exists() && !data.exists() && newData.child('uid').val() == auth.uid && auth != null"
    
      }
      },
    "messages":{
      "$messageroom":{
        ".read": "auth != null",
        "$message":{
          ".read": "auth != null",
        	".write": "newData.exists() && !data.exists() && newData.child('uid').val() == auth.uid && auth != null"
        }
      }
    }
  }
}